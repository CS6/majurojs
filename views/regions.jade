head
  title Regions of #{region.fullname}
  link(href="/stylesheets/bootstrap-mini.css", type="text/css", rel="stylesheet")
  script(type="text/javascript", src="/scripts/localregions.js")
body
  div.navbar
    .navbar-inner
      .container
        li
          a.brand(href="#") MajuroJS.org
        li
          a(href="#") Draw

  div.container
    .row
      .span8
        .hero-unit(style="background-color:#C2F23C;background-image:'#{region.images[0]}';background-repeat:no-repeat;")
          h1 MajuroJS.org
          h3
            span Regions of
            span(style="text-transform:capitalize;") #{region.fullname}
        div
          h3 Lists of regions:
          - each division in region.divisions
            h4 #{division.category}
            ul
              - each district in division.districts
                li
                  a("/build?src=#{division.name}&customgeo=#{district.geo}") #{district.name}

      .span4
        img.govlogo(src="#{region.images[1]}")
        br
        br
        h2 Look up a Region
        div.regionlists